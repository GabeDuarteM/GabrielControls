<UserControl x:Class="GabrielControls.TextBoxPlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GabrielControls"
             mc:Ignorable="d"
             d:DesignHeight="23" d:DesignWidth="300"
             Height="23">
    <Grid>
        <TextBox Text="{Binding Text}" MaxLength="{Binding MaxLength}" TextWrapping="{Binding TextWrapping}" TextChanged="VerificaNecessidadePlaceholder" />
        <Label Content="{Binding Placeholder}" Margin="-2,-4" Foreground="DimGray" IsHitTestVisible="False" Visibility="{Binding PlaceholderVisibility}" />
    </Grid>
</UserControl>